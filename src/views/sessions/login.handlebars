<div class="row justify-content-center">

    <h2 class="row justify-content-center">Iniciar Session</h2>

    <form class="w-25" action="/login" method="post">
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Email</label>
            <input type="email" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
            <div id="emailHelp" class="form-text">Nunca compartiremos tu correo electrónico con nadie</div>
        </div>

        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Contraseña</label>
            <input type="password" name="password" class="form-control" id="exampleInputPassword1">
        </div>

        <button type="submit" class="btn btn-success">Iniciar sesión</button>
    </form>
</div>

<div class="row justify-content-center">
     <form class="mt-3 w-25" action="/register" method="get">
        <button type="submit" class="btn btn-success">Registrarse</button>
    </form>
</div>

